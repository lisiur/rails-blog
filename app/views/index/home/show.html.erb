<div class="line"></div>

<section id="show-article" class="article">
  <div class="time-line">
    <div class="article-type">
      <!-- <span class="glyphicon glyphicon-<%= @article.article_type.glyphicon %>"></span> -->
      <img src="/assets/img/icons/<%= @article.article_type.glyphicon %>.svg">
    </div>
    <div class="article-date">
      <%= DateTime.parse(@article.created_at.to_s).strftime('%Y-%m-%d') %>
    </div>
    <div class="article-author">
      <%= link_to "/u/#{@article.author.name}" do %>
        <%= image_tag(@article.author.avatar_url(:thumb)) if @article.author&&@article.author.avatar? %>
        <span><%= @article.author.name if @article.author %></span>
      <% end %>
    </div>

  </div>
  <div class="article-main">
    <div class="article-title">
      <h1><%= @article.title %></h1>
    </div>
    <div class="article-content">
      <%= markdown @article.content if @article.editor ==0 %>
      <%= raw @article.content.html_safe if @article.editor ==1 %>
    </div>
  </div>
</section>
<a name="comment"></a>
