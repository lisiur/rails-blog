<p id="notice"></p>

<div class="panel panel-default table-responsive"> 
  <div class="panel-heading">博文列表</div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th class="text-center" width="20px"><label class="checkbox no-label toggle-all"><input type="checkbox" value=""data-toggle="checkbox"></label></th>
        <th>标题</th>
        <th>所属分类</th>
        <th>所属标签</th>

        <th>发表时间</th>
        <th>状态</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @admin_articles.each do |admin_article| %>
        <tr class="article-index">
          <td class="text-center"><label class="checkbox no-label"><input type="checkbox" value="" data-toggle="checkbox"></label></td>

          <td class="article-title">
            <%= link_to  edit_admin_article_path(admin_article),   title:admin_article.title do %>
              <span class="label label-primary"><%= admin_article.title[0..5]+(admin_article.title.length>5?'...':'') %></span>
            <% end %>
          </td>
          <td class="article-category">
            <% admin_article.categories.each do |c| %>
              <%= link_to "/admin/category/#{c.name}" do %>
                <span class="label label-default"><%= c.name %></span>
              <% end %>
            <% end %>
          </td>
          <td class="article-tag">
            <% admin_article.tags.each do |t| %>
              <%= link_to "/admin/tag/#{t.name}" do %>
                <span class="label label-default"><%= t.name %></span>
              <% end %>
            <% end %>
          </td>
          <td class="article-created_at"><%= DateTime.parse(admin_article.created_at.to_s).strftime('%Y-%m-%d') %></td>
          <td class="article-state">
            <span class="label label-primary"><%= admin_article.state %></span>
          </td>
          <td class="text-center">
            <%= link_to admin_article, method: :delete, data: { confirm: '确定删除?' } do %>
              <span class="fui-cross-circle text-danger"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>