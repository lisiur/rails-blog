<h2 class="title">
  我的博文
  <a href=<%= new_admin_article_path %> class="link">
    <i class="glyphicon glyphicon-plus"></i>
  </a>
</h2>
<span class="describe">在此可管理你的博文。</span>
<ul>
  <li>
    <a href=<%= admin_articles_path %> class="link">
      <i class="glyphicon glyphicon-th-large"></i>
      <span>所有博文</span>
    </a>
  </li>

  <li>
    <a href=<%= admin_articles_path+"?unpublished" %> class="link">
      <i class="glyphicon glyphicon-star"></i>
      <span>未发表博文</span>
    </a>
  </li>
  
  <li>
    <%= link_to new_admin_article_path+"?editor=ckeditor" do %>
      <i class="glyphicon glyphicon-star"></i>
      <span>ckeditor</span>
    </a>
    <% end %>
  </li>

  <li>
    <%= link_to new_admin_article_path do %>
      <i class="glyphicon glyphicon-star"></i>
      <span>mdeditor</span>
    </a>
    <% end %>
  </li>
  

</ul>